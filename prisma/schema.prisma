generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  password String 
  name String
  address String

  Image String?
  bio String?

  session Session[]
}
 
model Session {
  id Int @id @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userAgent String
  valid Boolean @default(true)

  user User @relation(fields: [userId], references: [id])
  userId Int
}